<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_8"
    android:layout_marginLeft="@dimen/main_8"
    android:layout_marginRight="@dimen/main_16"
    android:layout_marginTop="@dimen/main_8"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/main_20"
            android:layout_height="@dimen/main_20"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_usdt_logo_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Doallar"
            android:textColor="@color/color_99_transparent"
            android:textSize="@dimen/text_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_asset_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="start"
            android:text="500.00"
            android:textColor="@color/color_99_transparent"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>
</LinearLayout>