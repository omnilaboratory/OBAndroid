<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.backup.BackupBlockProcessActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/logo_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@mipmap/icon_logo"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/descriptionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_upper"
            android:textSize="18sp"
            android:textColor="@color/color_description_blue"
            android:letterSpacing="0.3"
            android:textAlignment="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="40dp"
        android:background="@drawable/bg_white_conner"
        android:elevation="10dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="@string/deposite_upper"
                    android:textSize="18sp"
                    android:textColor="@color/color_black_80"
                    android:letterSpacing="0.1"
                    android:textAlignment="center"
                    />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">
                <ImageView
                    android:id="@+id/qr_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/img_qr_code_exam_black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/qr_address"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="@string/example_qr_str"
                    android:textColor="@color/color_black"
                    android:textAlignment="center"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left">
                        <LinearLayout
                            android:id="@+id/btn_copy_addresss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@mipmap/copy"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/copy_address_upper"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">
                        <LinearLayout
                            android:id="@+id/btn_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@mipmap/arrow_right"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/start_upper"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_block"
                        android:textSize="16sp"
                        android:textColor="#7f000000"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/sync_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_block_percent"
                        android:textSize="16sp"
                        android:textColor="#7F06D78F"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_process_outer"
                android:layout_width="300dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_process_out"
                >
                <RelativeLayout
                    android:id="@+id/process_inner"
                    android:layout_marginTop="1dp"
                    android:layout_width="210dp"
                    android:layout_height="6dp"
                    android:background="@drawable/bg_process_in"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/block"
                        android:textSize="16sp"
                        android:textColor="@color/color_black_80"/>
                    <TextView
                        android:id="@+id/block_num_synced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/block_synced_num"
                        android:textSize="16sp"
                        android:textColor="@color/color_black_80"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/block_of"
                        android:textSize="16sp"
                        android:textColor="@color/color_black_80"/>
                    <TextView
                        android:id="@+id/block_num_sync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/block_sync_num"
                        android:textSize="16sp"
                        android:textColor="@color/color_black_80"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/commit_filter"
                        android:textSize="16sp"
                        android:textColor="@color/color_black_80"/>
                    <TextView
                        android:id="@+id/commit_num_synced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/block_synced_num"
                        android:textSize="16sp"
                        android:textColor="@color/color_black_80"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/block_of"
                        android:textSize="16sp"
                        android:textColor="@color/color_black_80"/>
                    <TextView
                        android:id="@+id/commit_num_sync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/block_sync_num"
                        android:textSize="16sp"
                        android:textColor="@color/color_black_80"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>