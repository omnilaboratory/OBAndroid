<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/lv_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_8"
        android:layout_marginTop="@dimen/main_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/rv_token_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_asset_logo"
                android:layout_width="@dimen/main_24"
                android:layout_height="@dimen/main_24"
                android:layout_marginLeft="@dimen/main_10"
                android:src="@mipmap/icon_usdt_logo_small"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_amount_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_asset_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0.025"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_16"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_value_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_asset_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="100.00"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_16"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_network_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_asset_net"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/main_24"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_network_link_black"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>