                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/expiration"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/timestamp"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/main_179"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">

                            <Button
                                android:id="@+id/btn_time"
                                android:layout_width="@dimen/main_75"
                                android:layout_height="@dimen/main_25"
                                android:background="@drawable/bg_black_rectangle_round_0"
                                android:drawableRight="@mipmap/icon_arrow_down_black_one"
                                android:gravity="center"
                                android:paddingLeft="@dimen/main_2"
                                android:paddingRight="@dimen/main_2"
                                android:text="@string/hours"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_12"/>

                            <EditText
                                android:id="@+id/edit_time"
                                android:layout_width="@dimen/main_81"
                                android:layout_height="@dimen/main_25"
                                android:paddingRight="@dimen/main_10"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical|right"
                                android:inputType="number"
                                android:hint="0"
                                android:textColorHint="@color/color_80p_transparent"
                                android:background="@drawable/bg_black_rectangle_round_0_thin"
                                android:textColor="@color/color_80p_transparent"
                                android:textSize="@dimen/text_16"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_60"
                android:layout_marginRight="@dimen/main_60"
                android:layout_marginTop="@dimen/main_20"
                android:layout_marginBottom="@dimen/main_25">

                <LinearLayout
                    android:id="@+id/layout_back_to_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/main_36"
                        android:layout_height="@dimen/main_36"
                        android:src="@mipmap/icon_arrow_left_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/main_7"
                        android:letterSpacing="0.25"
                        android:text="@string/back_big"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_16"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/main_36"
                        android:layout_height="@dimen/main_36"
                        android:src="@mipmap/icon_tick_green_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/main_7"
                        android:letterSpacing="0.25"
                        android:text="@string/confirm"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_16"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lv_lucky_packet_success"
            android:layout_width="@dimen/main_320"
            android:layout_height="@dimen/main_580"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_white_rectangle_round_20"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:letterSpacing="0.25"
                        android:text="@string/lucky_packet_upper"
