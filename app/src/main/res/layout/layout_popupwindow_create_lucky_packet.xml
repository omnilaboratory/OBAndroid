                        android:layout_marginRight="@dimen/main_20"
                        android:layout_marginTop="@dimen/main_10"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
