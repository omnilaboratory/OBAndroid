                            android:layout_height="@dimen/main_10"
                            android:layout_marginTop="@dimen/main_7"
                            android:progressDrawable="@drawable/channel_balance_progress_bar"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/main_20"
                        android:layout_marginRight="@dimen/main_20"
                        android:layout_marginTop="@dimen/main_10">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
