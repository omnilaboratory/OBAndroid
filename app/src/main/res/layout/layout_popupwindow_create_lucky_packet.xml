<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_D1123A50">

    <LinearLayout
        android:id="@+id/layout_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lv_lucky_packet_step_one"
            android:layout_width="@dimen/main_320"
            android:layout_height="@dimen/main_550"
            android:background="@drawable/bg_white_rectangle_round_20"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_25"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:letterSpacing="0.25"
                    android:text="@string/create_lucky_packet_upper"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_18"/>

                <ImageView
                    android:layout_width="@dimen/main_24"
                    android:layout_height="@dimen/main_24"
                    android:src="@mipmap/icon_red_packet_gift"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/main_20"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/main_10"
                android:text="@string/send_gifts_of_money"
                android:textColor="@color/color_99_transparent"
                android:textSize="@dimen/text_16"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/main_15"
                android:layout_weight="10000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/main_20"
                        android:layout_marginRight="@dimen/main_20"
                        android:background="@drawable/bg_black_rectangle_round_0_thin"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_9"
                            android:layout_marginTop="@dimen/main_7"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/main_24"
                                android:layout_height="@dimen/main_24"
                                android:src="@mipmap/icon_edit_black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/main_12"
                                android:text="Best Wishes"
                                android:textColor="@color/color_4A92FF"
                                android:textSize="@dimen/text_16"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/main_15"
                            android:layout_marginLeft="@dimen/main_45"
                            android:paddingTop="@dimen/main_5"
                            android:text="Wish you good health"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_16"
                            android:background="@null"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/main_0.2"
                        android:layout_marginTop="@dimen/main_10"
                        android:background="@color/color_black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/main_20"
                        android:layout_marginRight="@dimen/main_20"
                        android:layout_marginTop="@dimen/main_5">

                        <TextView
                            android:layout_marginTop="@dimen/main_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/asset_one"
                            android:textColor="@color/color_99_transparent"
                            android:textSize="@dimen/text_16"/>

                        <RelativeLayout
                            android:id="@+id/layout_select_asset"
                            android:layout_width="@dimen/main_179"
                            android:layout_height="@dimen/main_50"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/bg_black_rectangle_round_0_thin">

                            <LinearLayout
                                android:layout_marginRight="@dimen/main_10"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_asset_type"
                                        android:layout_width="@dimen/main_20"
                                        android:layout_height="@dimen/main_20"
                                        android:src="@mipmap/icon_usdt_logo_small"/>

                                    <TextView
                                        android:id="@+id/tv_asset_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="@dimen/main_5"
                                        android:text="dollar"
                                        android:textColor="@color/color_99_transparent"
                                        android:textSize="@dimen/text_16"/>

                                    <ImageView
                                        android:layout_width="@dimen/main_24"
                                        android:layout_height="@dimen/main_24"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:src="@mipmap/icon_arrow_down_black_two"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/capacity"
                                        android:textColor="@color/color_99_transparent"
                                        android:textSize="@dimen/text_14"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=":"
                                        android:textColor="@color/color_99_transparent"
                                        android:textSize="@dimen/text_14"/>

                                    <TextView
