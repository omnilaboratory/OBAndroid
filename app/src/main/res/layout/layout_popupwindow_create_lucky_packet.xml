                                        android:layout_height="wrap_content"
                                        android:text="@string/can_receive"
                                        android:textColor="@color/color_99_transparent"
                                        android:textSize="@dimen/text_14"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=":"
                                        android:textColor="@color/color_99_transparent"
                                        android:textSize="@dimen/text_14"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_can_receive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text="0"
                                    android:textColor="@color/color_4C49F4"
                                    android:textSize="@dimen/text_14"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <ProgressBar
