                        android:layout_marginTop="@dimen/main_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/number_first_upper"
                            android:textColor="@color/color_99_transparent"
                            android:textSize="@dimen/text_16"/>

                        <EditText
                            android:id="@+id/edit_number"
                            android:layout_width="@dimen/main_81"
                            android:layout_height="@dimen/main_25"
                            android:paddingRight="@dimen/main_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical|right"
                            android:inputType="number"
                            android:text="10"
                            android:textColorHint="@color/color_80p_transparent"
                            android:background="@drawable/bg_black_rectangle_round_0_thin"
                            android:textColor="@color/color_80p_transparent"
                            android:textSize="@dimen/text_16"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
